<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="textFonts">
        <attr name="fontType" format="enum">
            <enum name="gotham_black" value="1" />
            <enum name="gotham_bold" value="2" />
            <enum name="gotham_book" value="3" />
            <enum name="gotham_light" value="4"></enum>
            <enum name="gotham_medium" value="5" />
            <enum name="gotham_thin" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="KeyboardStyle">
        <attr name="button_background" format="enum">
            <enum name="passcode_background" value="1" />
            <enum name="verify_email_background" value="2" />
        </attr>

        <attr name="bottom_left_button" format="enum">
            <enum name="empty" value="0" />
            <enum name="forgot" value="10" />
            <enum name="cancel" value="20" />
        </attr>

        <attr name="bottom_right_button" format="enum">
            <enum name="empty" value="0" />
            <enum name="back_image" value="10" />
        </attr>

    </declare-styleable>

    <declare-styleable name="PinCodeView">
        <attr name="lp_empty_pin_dot" format="integer" />
        <attr name="lp_full_pin_dot" format="integer" />
        <attr name="lp_error_dot" format="integer" />
    </declare-styleable>

    <declare-styleable name="filterType">
        <attr name="isAmountField" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="trimExpandedText" format="string" />
        <attr name="trimCollapsedText" format="string" />
        <attr name="trimLength" format="integer" />
        <attr name="showTrimExpandedText" format="boolean" />
        <attr name="colorClickableText" format="color" />
        <attr name="trimLines" format="integer" />
        <attr name="trimMode">
            <enum name="trimModeLine" value="0"/>
            <enum name="trimModeLength" value="1"/>
        </attr>
    </declare-styleable>

</resources>