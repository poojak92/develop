<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AppTheme.NoActionBar.DarkStatusBar" parent="AppTheme">
        <item name="cardViewStyle">@style/CardView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.LightStatusBar" parent="AppTheme">
        <item name="cardViewStyle">@style/CardView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="TextInputLayoutHintStyle">
        <item name="android:textSize">@dimen/textinput_hint_size</item>
        <item name="android:textColorHint">@color/hint_color</item>

        <item name="colorControlNormal">@color/hint_color</item>
        <item name="colorControlActivated">@color/til_control_normal</item>
        <item name="colorControlHighlight">@color/til_control_normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:textColor">@color/til_control_normal</item>
        <item name="android:textSize">@dimen/textinput_hint_size</item>


    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/msg_error</item>
    </style>

    <style name="image_profile_attribute">
        <item name="android:layout_width">@dimen/img_width_profile</item>
        <item name="android:layout_height">@dimen/img_width_profile</item>
    </style>

    <style name="image_account_attribute">
        <item name="android:layout_width">@dimen/img_width_account</item>
        <item name="android:layout_height">@dimen/img_width_account</item>
    </style>

    <style name="image_attribute_home">
        <item name="android:layout_width">@dimen/img_width_home</item>
        <item name="android:layout_height">@dimen/img_height_home</item>
    </style>

    <style name="image_thumb">
        <item name="android:layout_width">@dimen/img_thumb</item>
        <item name="android:layout_height">@dimen/img_thumb</item>
    </style>


</resources>
