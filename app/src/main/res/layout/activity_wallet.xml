<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        layout="@layout/layout_generic_toolbar"/>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_toolbar_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackground">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clMyCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:layout_marginTop="@dimen/layout_top"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           >
        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.scarlett.Ui.CustomeView.CustomTextView
                android:id="@+id/tv_mycoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_left"
                android:layout_marginTop="@dimen/layout_top"
                android:layout_marginBottom="@dimen/layout_bottom"
                android:text="My Coins "
                app:fontType="gotham_bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_20_sp"
                android:textStyle="bold"
               />

            <com.scarlett.Ui.CustomeView.CustomTextView
                android:id="@+id/tv_spendRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_left"
                android:text="200 coins"
                android:layout_marginTop="@dimen/layout_top"
                android:layout_marginBottom="@dimen/layout_bottom"
                app:fontType="gotham_light"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_20_sp"
                />
        </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <com.scarlett.Ui.CustomeView.CustomTextView
            android:id="@+id/tv_buycoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_left"
            android:text="Buy coins"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clMyCoins"
            android:layout_marginTop="@dimen/layout_top"
            android:layout_marginBottom="@dimen/layout_bottom"
            app:fontType="gotham_light"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_18_sp"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clbuyCoinslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:layout_marginTop="@dimen/layout_top"
            android:layout_marginLeft="@dimen/layout_left"
            android:layout_marginRight="@dimen/layout_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_buycoins">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                style="@style/image_thumb"
                android:src="@drawable/ic_temp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorblack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/text_top"
                android:layout_marginBottom="@dimen/text_top"
                />


            <com.scarlett.Ui.CustomeView.CustomTextView
                android:id="@+id/tv_buycoinsmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_left"
                android:layout_marginTop="1dp"
                android:text="200 Coins for Rs.100"
                app:fontType="gotham_light"
                android:layout_marginBottom="@dimen/text_top"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_size_18_sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintLeft_toRightOf="@+id/imageView"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>