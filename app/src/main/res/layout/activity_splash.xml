<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".activity.SplashActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activity.LandingActivity">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/activity_main_done"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.SplashActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_splash"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"
                    />


                <com.scarlett.Ui.CustomeView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_splash"
                    app:fontType="gotham_bold"
                    android:text="@string/splash_msg"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/white"/>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>

