<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/ll_camera"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/text_top"
        android:layout_marginLeft="@dimen/layout_left"
        android:background="@drawable/drawable_photofolder"
        android:layout_marginRight="@dimen/layout_right"
        android:gravity="center"
        android:visibility="gone">
    <ImageView
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_circle_camera"
        />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_image"
        android:layout_width="160dp"
        android:layout_height="160dp"

        android:orientation="vertical"
        android:layout_marginTop="@dimen/layout_top"
        android:layout_marginLeft="@dimen/layout_left"
        android:background="@drawable/drawable_photofolder"
        android:layout_marginRight="@dimen/layout_right"
        android:gravity="center"
        android:visibility="visible">
    <ImageView
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:id="@+id/iv_image"
        android:scaleType="fitCenter"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
        <CheckBox
            android:id='@+id/checkBox1'
            android:layout_width='wrap_content'
            android:layout_height='wrap_content'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.scarlett.Ui.CustomeView.CustomTextView
            android:id="@+id/tv_folder"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_14_sp"
            app:fontType="gotham_medium"
            android:maxLength="15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <com.scarlett.Ui.CustomeView.CustomTextView
            android:id="@+id/tv_folder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:textColor="@color/colorFb"
            android:textSize="@dimen/text_size_12_sp"
            app:fontType="gotham_light"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_folder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
           />


    </android.support.constraint.ConstraintLayout>



</RelativeLayout>